# Place nginx config files in /etc/nginx/sites-available, and make a symbolic link
# to /etc/nginx/sites-enabled to activate the site.


upstream USERNAME {
  # fail_timeout=0 means we always retry an upstream even if it failed
  # to return a good HTTP response (in case the Unicorn master nukes a
  # single worker for timing out).
  server unix:/tmp/SITENAME.socket fail_timeout=0;
}

server {
    listen   80;
    server_name SITENAME

    client_max_body_size 4G;

    access_log /srv/SITENAME/logs/access-nginx.log;
    error_log /srv/SITENAME/logs/error-nginx.log info;

    location /static/ {
        alias   /srv/SITENAME/static/;
    }

    location /upload/ {
        alias   /srv/SITENAME/static/uploaded_files/;
    }

    location / {
        proxy_set_header Host $host;
        proxy_pass http://USERNAME;
    }

    # Error pages
    # error_page 500 502 503 504 /500.html;
    # location = /500.html {
    #    root /srv/SITENAME/static/error_pages/;
    # }
}
