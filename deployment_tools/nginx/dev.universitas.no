# Place nginx config files in /etc/nginx/sites-available, and make a symbolic link
# to /etc/nginx/sites-enabled to activate the site.


upstream dev_universitas_no {
  # fail_timeout=0 means we always retry an upstream even if it failed
  # to return a good HTTP response (in case the Unicorn master nukes a
  # single worker for timing out).
  server unix:/tmp/dev.universitas.no.socket fail_timeout=0;
}

server {
    listen               80;
    server_name          staging.universitas.no;

    client_max_body_size 100M;

    access_log           /srv/dev.universitas.no/logs/access-nginx.log;
    error_log            /srv/dev.universitas.no/logs/error-nginx.log info;

    location /static/ {
        alias            /srv/dev.universitas.no/static/;
    }

    location /foto/ {
        alias            /srv/fotoarkiv_universitas/;
    }

    location / {
        satisfy any;
        allow            84.211.75.214;
        auth_basic       "samme som prodsys";
        auth_basic_user_file /etc/nginx/.htpasswd;
        deny             all;

        error_page 403 = @public;
        proxy_set_header Host $host;
        proxy_pass       http://dev_universitas_no;
    }

    location @public {
        return 301 $scheme://universitas.no/;
    }

    # Error pages
    # error_page 500 502 503 504 /500.html;
    # location = /500.html {
    #    root            /srv/dev.universitas.no/static/error_pages/;
    # }
}
